<!-- Added external script for validation-->

<div class="modal register-modal" tabindex="-1" role="dialog">
    
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Register New Account</h5>
                <button type="button" class="close close-modal" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                <div class="row">
                <!-- Added onsubmit event, linked to external JS file-->
                <form class="needs-validation" id='user-register-form' action='/users/register'  method="POST" novalidate>
                    <div class="form-group">
                        <label for="fName">First Name</label>
                        <input type="text" class="form-control" id="fName" name="fName" placeholder="Enter First Name" required>
                        <div class="invalid-feedback">
                            Enter first name!
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lName">Last Name</label>
                        <input type="text" class="form-control" id="lName" name="lName" placeholder="Enter Last Name" required>
                        <div class="invalid-feedback">
                            Enter last name!
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Enter email" required>
                        <div class="invalid-feedback">
                            Email Address Needed!
                        </div>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                    </div>
                    <div class="form-group">
                        <label for="datepicker">Date of Birth</label>
                        <input type="date" name="birthday" id="datepicker" required/>
                    </div>
                    <div class="form-group">
                        <label for="NewPassword">Password</label>
                        <input type="password" class="form-control" id="NewPassword" name="password" placeholder="Password" length=8 required>
                        </div>
                        </div>
                        <div class='row'>
                         <div id="message">
                          <h3>Password must contain the following:</h3>
                          <p id="letter" class="invalid">A <b>lowercase</b> letter</p>
                          <p id="capital" class="invalid">A <b>capital (uppercase)</b> letter</p>
                          <p id="number" class="invalid">A <b>number</b></p>
                          <p id="symbol" class="invalid">A <b>symbol</b></p>
                          <p id="length" class="invalid">Minimum <b>8 characters</b></p>
                        </div>
                        </div>
                        </div>

                    </div>

                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
    
<script type="text/javascript" src="/javascripts/validateRegister.js"></script>
