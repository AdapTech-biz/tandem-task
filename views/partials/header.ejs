<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%

    if(typeof userProfile != 'undefined'){ %>
        <title>
            <%= userProfile.firstName +" "+ userProfile.lastName%>
        </title>

        <% } else { %>
            <title>PinUp</title>
            <% } %>
                <link rel='stylesheet' href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700,100%7CRoboto:400,700,300,100' type='text/css'>
                <!-- Bootstrap and Font Awesome css -->
                <link href="https://d1t99vwu1x3ov2.cloudfront.net/stylesheets/font-awesome.css" rel="stylesheet">
                <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
                <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
                <%
    if(typeof page != 'undefined')
    {
        switch(page){
            case 'profile': //first case
            case 'task':
            case 'account':
            %>
                        <!--Profile page stylesheet-->
                        <link rel="stylesheet" type="text/css" href="https://d1t99vwu1x3ov2.cloudfront.net/stylesheets/profile-style.css">
                        <% break; //break of first case
        
            }//end switch block
    }//end if block
    %>
                        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/gijgo@1.9.3/combined/css/gijgo.min.css" type="text/css" />
                        <link rel="stylesheet" href="https://d1t99vwu1x3ov2.cloudfront.net/stylesheets/bootstrap.min.css">

                        <!-- Theme stylesheet -->
                        <link rel=" stylesheet" href="https://d1t99vwu1x3ov2.cloudfront.net/stylesheets/style.css" id="theme-stylesheet">

                        <!-- CSS Animations -->
                        <link rel="stylesheet" href="https://d1t99vwu1x3ov2.cloudfront.net/stylesheets/animate.css">

                        <!-- Favicon -->
                        <link rel="shortcut icon" href="https://d1t99vwu1x3ov2.cloudfront.net/images/favicon.png">

                        <!-- Mordernizr -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/modernizr-2.6.2.min.js"></script>


                        <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ" crossorigin="anonymous"></script>
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/jquery-3.3.1.min.js"></script>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
                        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
                        <script src="https://cdn.jsdelivr.net/npm/gijgo@1.9.3/combined/js/gijgo.min.js" type="text/javascript"></script>

                        <!-- js base -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/jquery-1.11.0.min.js"></script>
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/bootstrap.min.js"></script>
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/jquery.cookie.js"></script>
                        <!-- waypoints for scroll spy -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/waypoints.min.js"></script>
                        <!-- jQuery scroll to -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/jquery.scrollTo.min.js"></script>
                        <!-- jQuery counter -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/jquery.counterup.min.js"></script>
                        <!-- jQuery parallax -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/jquery.parallax-1.1.3.js"></script>
                        <!-- main js file -->
                        <script src="https://d1t99vwu1x3ov2.cloudfront.net/javascripts/main.js"></script>


</head>

<body data-spy="scroll" data-target="#navigation" data-offset="120">


    <!--Navbar-->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation" id="navbar">
        <div class="container">
            <div class=" col-sm-12" id="navigation">

               <a href="/"><img src="https://d1t99vwu1x3ov2.cloudfront.net/images/PinUpLogo.png" height="50px"></a> 
                <ul class="nav navbar-right">
                    <% if(typeof user != 'undefined'){ %>
                    <% if(typeof currentBalance != 'undefined'){ %>
                        <li>
                            <div class="dropdown ">
                                <button class="btn red-boarder" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Wallet: <span> <%= currentBalance %>  </span>XLM </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <a class="dropdown-item"><strong>Your Wallet Address:</strong></a>
                                    <a class="dropdown-item">
                                        <%= user.wallet %>
                                    </a>
                                </div>
                            </div>
                        </li>
                    <% } %>
                    <% if(typeof pendingTasks != 'undefined'){ %>
                        <li>
                            <div class="dropdown" id="notification-tray">
                                <button class="btn red-boarder" type="button" id="dropdownTasksButton"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><img id="notifiaction-icon" src="/images/favicon.png"><span id="notifiaction-counter"><%= pendingTasks.length %> </span> </button>
                                <div class="dropdown-menu"  aria-labelledby="dropdownTasksButton">
                                 <h6 class="dropdown-header">Tasks To Accept:</h6>
                                    <% if(pendingTasks.length > 0){ %>
                                        <% pendingTasks.forEach(function(task){ %>
                                            <a class="dropdown-item">
                                              <a href= <%= "/task/review/" + task._id + "/" + task.status.tempHash %> ><p><%= task.title %></p></a>
                                            </a>

                                            <% }); %>
                                                <% }else{ %>
                                                    <a class="dropdown-item">
                                                        <p disabled>Nothing new yet...</p>

                                                    </a>
                                                    <% } %>

                                </div>
                            </div>
                        </li>
                        <% } %>
                        <% if (typeof user != 'undefined' && (typeof userProfile == 'undefined' || user._id != userProfile._id) ){ %>
                            <li>
                                <a href= <%= '/profile/' + user._id %> >Back to DashBoard</a>
                            </li>

                            <% } %>

                                <li>
                                    <a href="/account/logout" id="logout">Log Out</a>
                                </li>

                                <% } else{ %>
                                    <li class="active" href="#intro" id="home"><a>Home</a></li>
                                    <li id="login"><a>Login</a></li>
                                  
                                    <li id="register"><a>Sign Up</a></li>
                                    <% } %>

                </ul>
                <!-- *** NAVBAR END *** -->
                <div class="user-notification">
                    <h3 id="notification-message"> Test</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- /#navbar -->


